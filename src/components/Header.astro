---
const links = [
  { name: "Inicio", href: "/" },
  { name: "Cursos", href: "/courses" },
  { name: "Contacto", href: "/contact" },
];
---

<header class="bg-white p-4">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-xl font-bold text-black">TechCourses</h1>
    <nav>
      <ul class="flex space-x-4">
        {links.map((link) => (
          <li>
            <a href={link.href} class="hover:underline text-black">{link.name}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
