---
const courses = [
  { id: 1, title: "React desde cero", price: "29.99 USD" },
  { id: 2, title: "Introducci√≥n a Python", price: "19.99 USD" },
  { id: 3, title: "Machine Learning", price: "49.99 USD" },
];
---
<section class="container mx-auto py-8">
    
  <h2 class="text-2xl font-bold mb-4">Nuestros Cursos</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    {courses.map((course) => (
      <div class="border rounded-lg p-4 shadow-md bg-white">
        <h3 class="text-lg font-bold">{course.title}</h3>
        <p class="text-gray-700 mt-2">Precio: {course.price}</p>
        <button class="mt-4 bg-blue-600 text-white px-4 py-2 rounded">
          Comprar
        </button>
      </div>
    ))}
  </div>
</section>
