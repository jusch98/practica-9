---
// src/components/PostContent.astro
const { title, description, image, price, level } = Astro.props;
---

<article class="max-w-3xl mx-auto py-12 px-4">
  <header class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 font-BadComa">{title}</h1>
    <img src={image} alt={title} class="w-full mt-4 h-64 object-cover rounded-md" />
    <p class="mt-6 text-lg text-gray-600">{description}</p>
    <p class="mt-4 text-xl text-green-600 font-semibold">Precio: ${price}</p>
    <p class="mt-2 text-lg text-orange-500">Nivel: {level}</p>
  </header>
</article>
